% To describe requirements of each Use Case
\newcommand{\requirements}[2]{{
    \noindent%
    \begin{tabular}{||p{2.3cm}||p{12.7cm}||}
      \ifpdf
      \hhline{|t:=:t:=:t|}
      \else
      \hline
      \fi
      Requirements\vfill &
      \parbox{12cm}{{#1}}
      \\
      \ifpdf
      \hhline{|:=::=:|}
      \else
      \hline
      \fi
      Results\vfill &
      \parbox{12cm}{{#2}}
      \\
      \ifpdf
      \hhline{|b:=:b:=:b|}
      \else
      \hline
      \fi
    \end{tabular}
  }}

\newcommand{\longrequirements}[2]{{
    \noindent%
    \ifpdf
    \begin{longtable}{||p{2.3cm}||p{12.7cm}||}
      \hhline{|t:=:t:=:t|}
      Requirements\vfill &
